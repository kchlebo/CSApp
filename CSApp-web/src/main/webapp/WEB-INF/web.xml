<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.cornerstone.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Incident</servlet-name>
        <servlet-class>com.cornerstone.Incident</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddWorklog</servlet-name>
        <servlet-class>com.cornerstone.AddWorklog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>com.cornerstone.SendMail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdmin</servlet-name>
        <servlet-class>com.cornerstone.UserAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerAdmin</servlet-name>
        <servlet-class>com.cornerstone.CustomerAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOut</servlet-name>
        <servlet-class>com.cornerstone.SignOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Incident</servlet-name>
        <url-pattern>/Incident</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddWorklog</servlet-name>
        <url-pattern>/AddWorklog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/SendMail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdmin</servlet-name>
        <url-pattern>/UserAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerAdmin</servlet-name>
        <url-pattern>/CustomerAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignOut</servlet-name>
        <url-pattern>/SignOut</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <description>header settings</description>
            <url-pattern>/createIncident.jsp</url-pattern>
            <url-pattern>/admin.jsp</url-pattern>
            <url-pattern>/groupAdmin.jsp</url-pattern>
            <url-pattern>/home.jsp</url-pattern>
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <url-pattern>/userAdmin.jsp</url-pattern>
            <url-pattern>/incident.jsp</url-pattern>
            <url-pattern>/searchIncident.jsp</url-pattern>
            <url-pattern>/customerAdmin.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>
